    var contactPhone = Model.HasValue("contactPhone") ? Model.Value<string>("contactPhone") : "+1 (555) 123-4567";
    var contactAddress = Model.HasValue("contactAddress") ? Model.Value<string>("contactAddress") : "123 Business Park, Suite 100<br>New York, NY 10001";
    
