            padding: 2rem;
            border-radius: 15px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .stat-number {
            font-size: 3rem;
            font-weight: 700;
            color: var(--primary-orange);
            margin-bottom: 0.5rem;
        }

        .stat-label {
            color: var(--lighter-grey);
            font-size: 1rem;
        }

        /* Clients Section */
        .clients {
            background: var(--bg-light);
            overflow: hidden;
        }

        .clients-slider-wrapper {
            overflow: hidden;
            position: relative;
            padding: 2rem 0;
        }

        .clients-slider-wrapper::before,
        .clients-slider-wrapper::after {
            content: '';
            position: absolute;
            top: 0;
            width: 150px;
            height: 100%;
            z-index: 2;
            pointer-events: none;
        }

        .clients-slider-wrapper::before {
            left: 0;
            background: linear-gradient(to right, var(--bg-light), transparent);
        }

        .clients-slider-wrapper::after {
            right: 0;
            background: linear-gradient(to left, var(--bg-light), transparent);
        }

        .clients-slider {
            display: flex;
            width: fit-content;
            animation: slideClients 30s linear infinite;
            gap: 3rem;
        }

        .clients-slider:hover {
            animation-play-state: paused;
        }

        @@keyframes slideClients {
            0% {
                transform: translateX(0);
            }
            100% {
                transform: translateX(-50%);
            }
        }

        .clients-grid {
            display: flex;
            gap: 3rem;
            align-items: center;
        }

        .client-logo {
            background: white;
            padding: 2.5rem 3rem;
            border-radius: 15px;
            text-align: center;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--light-grey);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            min-width: 220px;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .client-logo:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 15px 40px rgba(255, 107, 53, 0.15);
            color: var(--primary-orange);
        }

        /* Contact Section */
        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 4rem;
            align-items: start;
        }

        .contact-info {
            opacity: 0;
            transform: translateX(-30px);
        }

        .contact-info.reveal {
            animation: slideInLeft 0.8s ease forwards;
        }

        .contact-item {
            margin-bottom: 2.5rem;
        }

        .contact-item-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--primary-orange);
        }

        .contact-item h3 {
            font-size: 1.3rem;
            color: var(--primary-grey);
            margin-bottom: 0.5rem;
        }

        .contact-item p, .contact-item a {
            color: var(--light-grey);
            text-decoration: none;
        }

        .contact-item a:hover {
            color: var(--primary-orange);
        }

        .contact-form {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateX(30px);
        }

        .contact-form.reveal {
            animation: slideInRight 0.8s ease forwards;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--primary-grey);
            font-weight: 600;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 1rem;
            border: 2px solid var(--lighter-grey);
            border-radius: 10px;
            font-family: inherit;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-orange);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 150px;
        }

        /* Footer */
        footer {
            background: var(--primary-grey);
            color: white;
            padding: 3rem 3rem 2rem;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .footer-section h4 {
            margin-bottom: 1.5rem;
            color: var(--primary-orange);
        }

        .footer-section p,
        .footer-section a {
            color: var(--lighter-grey);
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

        .footer-section a:hover {
            color: white;
        }

        .footer-bottom {
            max-width: 1400px;
            margin: 0 auto;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
            color: var(--lighter-grey);
        }

        body.dark-mode .service-card,
        body.dark-mode .product-card,
        body.dark-mode .client-logo,
        body.dark-mode .contact-form {
            background: #111c33;
            color: var(--primary-grey);
            border-color: rgba(255, 255, 255, 0.08);
            box-shadow: 0 12px 30px rgba(0, 0, 0, 0.35);
        }

        body.dark-mode .service-card p,
        body.dark-mode .product-content p,
        body.dark-mode .contact-item p,
        body.dark-mode .contact-item a,
        body.dark-mode .footer-section p,
        body.dark-mode .footer-section a,
        body.dark-mode .footer-bottom {
            color: var(--light-grey);
        }

        body.dark-mode .product-content h3,
        body.dark-mode .service-card h3,
        body.dark-mode .contact-item h3,
        body.dark-mode .footer-section h4 {
            color: var(--primary-grey);
        }

        body.dark-mode .contact-form input,
        body.dark-mode .contact-form textarea {
            background: #0b1220;
            color: var(--primary-grey);
            border-color: rgba(255, 255, 255, 0.12);
        }

        body.dark-mode .contact-form label {
            color: var(--primary-grey);
        }

        body.dark-mode .clients-slider-wrapper::before {
            background: linear-gradient(to right, #0b1220, transparent);
        }

        body.dark-mode .clients-slider-wrapper::after {
            background: linear-gradient(to left, #0b1220, transparent);
        }

        body.dark-mode .about {
            background: linear-gradient(135deg, #0f172a 0%, #0b1220 100%);
