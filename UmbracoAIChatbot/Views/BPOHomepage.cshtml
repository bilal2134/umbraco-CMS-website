    var logoText = Model.HasValue("logoText") ? Model.Value<string>("logoText") : "Greybeard";
    var navLink1Text = Model.HasValue("navLink1Text") ? Model.Value<string>("navLink1Text") : "Home";
    var navLink1Url = Model.HasValue("navLink1Url") ? Model.Value<string>("navLink1Url") : "#hero";
    var navLink2Text = Model.HasValue("navLink2Text") ? Model.Value<string>("navLink2Text") : "Services";
    var navLink2Url = Model.HasValue("navLink2Url") ? Model.Value<string>("navLink2Url") : "#services";
    var navLink3Text = Model.HasValue("navLink3Text") ? Model.Value<string>("navLink3Text") : "About";
    var navLink3Url = Model.HasValue("navLink3Url") ? Model.Value<string>("navLink3Url") : "#about";
    var navLink4Text = Model.HasValue("navLink4Text") ? Model.Value<string>("navLink4Text") : "Contact";
    var navLink4Url = Model.HasValue("navLink4Url") ? Model.Value<string>("navLink4Url") : "#contact";
    var ctaButtonText = Model.HasValue("ctaButtonText") ? Model.Value<string>("ctaButtonText") : "Contact Us";
    
    // SERVICES SECTION
    var servicesHeading = Model.HasValue("servicesHeading") ? Model.Value<string>("servicesHeading") : "Our Services";
    var servicesSubheading = Model.HasValue("servicesSubheading") ? Model.Value<string>("servicesSubheading") : "Comprehensive solutions designed to accelerate your business growth and digital transformation journey.";
