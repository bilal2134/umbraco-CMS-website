            border-radius: 15px;
            text-align: center;
            font-size: 1.8rem;
            font-weight: 700;
            color: var(--light-grey);
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.05);
            transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
            min-width: 220px;
            white-space: nowrap;
            flex-shrink: 0;
        }

        .client-logo:hover {
            transform: translateY(-8px) scale(1.05);
            box-shadow: 0 15px 40px rgba(255, 107, 53, 0.15);
            color: var(--primary-orange);
        }

        /* Contact Section */
        .contact-grid {
            display: grid;
            grid-template-columns: 1fr 1.5fr;
            gap: 4rem;
            align-items: start;
        }

        .contact-info {
            opacity: 0;
            transform: translateX(-30px);
        }

        .contact-info.reveal {
            animation: slideInLeft 0.8s ease forwards;
        }

        .contact-item {
            margin-bottom: 2.5rem;
        }

        .contact-item-icon {
            font-size: 2rem;
            margin-bottom: 1rem;
            color: var(--primary-orange);
        }

        .contact-item h3 {
            font-size: 1.3rem;
            color: var(--primary-grey);
            margin-bottom: 0.5rem;
        }

        .contact-item p, .contact-item a {
            color: var(--light-grey);
            text-decoration: none;
        }

        .contact-item a:hover {
            color: var(--primary-orange);
        }

        .contact-form {
            background: white;
            padding: 2.5rem;
            border-radius: 20px;
            box-shadow: var(--shadow);
            opacity: 0;
            transform: translateX(30px);
        }

        .contact-form.reveal {
            animation: slideInRight 0.8s ease forwards;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-group label {
            display: block;
            margin-bottom: 0.5rem;
            color: var(--primary-grey);
            font-weight: 600;
        }

        .form-group input,
        .form-group textarea {
            width: 100%;
            padding: 1rem;
            border: 2px solid var(--lighter-grey);
            border-radius: 10px;
            font-family: inherit;
            font-size: 1rem;
            transition: border-color 0.3s ease;
        }

        .form-group input:focus,
        .form-group textarea:focus {
            outline: none;
            border-color: var(--primary-orange);
        }

        .form-group textarea {
            resize: vertical;
            min-height: 150px;
        }

        /* Footer */
        footer {
            background: var(--primary-grey);
            color: white;
            padding: 3rem 3rem 2rem;
        }

        .footer-content {
            max-width: 1400px;
            margin: 0 auto;
            display: grid;
            grid-template-columns: 2fr 1fr 1fr 1fr;
            gap: 3rem;
            margin-bottom: 3rem;
        }

        .footer-section h4 {
            margin-bottom: 1.5rem;
            color: var(--primary-orange);
        }

        .footer-section p,
        .footer-section a {
            color: var(--lighter-grey);
            text-decoration: none;
            display: block;
            margin-bottom: 0.5rem;
        }

        .footer-section a:hover {
            color: white;
        }

        .footer-bottom {
            max-width: 1400px;
            margin: 0 auto;
            padding-top: 2rem;
            border-top: 1px solid rgba(255, 255, 255, 0.1);
            text-align: center;
            color: var(--lighter-grey);
        }

        /* Animations */
        @@keyframes slideInLeft {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInRight {
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes fadeInUp {
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes scaleIn {
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        /* Responsive */
        @@media (max-width: 1200px) {
            .hero {
                grid-template-columns: 1fr;
                text-align: center;
            }
            
            .hero-content, .demo-container {
                animation: fadeInUp 0.8s ease forwards;
            }
            
            .about-content {
                grid-template-columns: 1fr;
            }
            
            .contact-grid {
                grid-template-columns: 1fr;
            }
            
            .footer-content {
                grid-template-columns: 1fr 1fr;
            }
        }

        @@media (max-width: 768px) {
            nav {
                padding: 1rem 1.5rem;
            }
            
            nav ul {
                gap: 1rem;
                font-size: 0.9rem;
            }
            
            .cta-nav {
                padding: 0.5rem 1.2rem;
            }
            
            .hero h1 {
                font-size: 2.5rem;
            }
            
            section {
                padding: 4rem 1.5rem;
            }
            
            .section-title {
                font-size: 2rem;
            }
            
            .services-grid,
            .products-grid {
                grid-template-columns: 1fr;
            }
            
            .footer-content {
                grid-template-columns: 1fr;
            }
        }
    </style>
</head>
