    var aboutPara2 = Model.HasValue("aboutParagraph2") ? Model.Value<string>("aboutParagraph2") : "With a team of experienced professionals and deep expertise in enterprise solutions, we help organizations navigate the complexities of digital transformation and achieve measurable business outcomes.";
    var aboutPara3 = Model.HasValue("aboutParagraph3") ? Model.Value<string>("aboutParagraph3") : "Our commitment to excellence, innovation, and client success has made us a trusted partner for businesses across industries.";
    var statsProjects = Model.HasValue("statsProjects") ? Model.Value<string>("statsProjects") : "500+";
