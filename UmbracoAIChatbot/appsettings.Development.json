{
  "$schema": "appsettings-schema.json",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "Console"
            }
          ]
        }
      }
    ]
  },
  "Umbraco": {
    "CMS": {
      "Content": {
        "MacroErrors": "Throw"
      },
      "Hosting": {
        "Debug": true
      }
    }
  },
  "Chatbot": {
    "Endpoint": "https://FoundryTrilogy.openai.azure.com/openai/v1/",
    "ApiKey": "REPLACE_WITH_AZURE_OPENAI_KEY",
    "DeploymentName": "DeepSeek-R1",
    "SystemPrompt": "You are the Greybeard website assistant. Use only the provided live site context. Reply in plain text, concise, no markdown.",
    "MaxTokens": 800,
    "Temperature": 0.7
  }
}
